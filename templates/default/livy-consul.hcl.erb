service {
    id = "livy"
    name = "livy"
    tags = [
        "livy"
    ]
    port = <%= node['livy']['port'] %>
    check = {
        id = "livy-check"
        name = "Health check for Livy"
        args = ["<%= node['livy']['base_dir'] %>/bin/livy-health.sh"]
        interval = "20s"
        timeout = "20s"
        status = "passing"
    }
}